{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension (test folder)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "${workspaceFolder}/test"
            ],
            "preLaunchTask": "Build Themes"
        },
        {
            "name": "Run Extension (open workspace)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "preLaunchTask": "Build Themes"
        }
    ]
}